generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String  @unique
  password  String
  role      Role  
  createdAt DateTime @default(now()) 
 }
 model Child {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String  @unique
  parentId String
  pushToken String?
  createdAt DateTime @default(now())
 }
 model SOSAlert {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  childId   String
  latitude  Float
  longitude Float
  timestamp DateTime
}
  model Location {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    childId   String
    latitude  Float
    longitude Float
    timestamp DateTime 
  }
model GeoFence {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  childId   String
  latitude  Float
  longitude Float
  radius    Float    // in meters
  name      String
  createdAt DateTime @default(now())
}

  enum Role {
  parent 
  child
  }