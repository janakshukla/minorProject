generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String  @unique
  password  String
  role      Role  
  createdAt DateTime @default(now()) 
 }
 model Child {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String  @unique
  parentId String
  createdAt DateTime @default(now())
 }
  model UsageLog {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    appName   String
    childId   String 
    duration Int
    timestamp DateTime 
  }
  model Location {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    childId   String
    latitude  Float
    longitude Float
    timestamp DateTime 
  }
  model LockStatus {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    childId   String
    locked    Boolean
    untiltimestamp DateTime 
  }
  model CallLog {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    childId   String
    callerId  String
    duration  Int
    timestamp DateTime 
  }
  enum Role {
  parent 
  child
  }